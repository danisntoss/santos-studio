---
import Button from "./Button.astro";
import ArrowRightIcon from "./icons/ArrowRightIcon.astro";
---

<section id="introduction">
    <div class="image">
        <img src="/instagrampfp.png" alt="santos.studio-logo" />
    </div>
    <div class="title">
        <h1>Santos Studio.</h1>
        <p>Proyecto personal. Estudio de dise√±o y corte de vinilo.</p>
        <Button
            type="primary"
            name="Tengo un proyecto en mente!"
            link="/contacto"
        >
            <ArrowRightIcon color="white" />
        </Button>
    </div>
</section>
<style>
    section {
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        width: 100%;
        height: 80vh;
        animation: inAnimation 1s ease-out;
    }

    h1 {
        font-size: 5rem;
    }

    p {
        font-size: 1.5rem;
        font-weight: 400;
        margin-bottom: 30px;
    }

    .title {
        width: 100%;
        padding: 0 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: 0.7rem;
    }

    .image {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        img {
            width: 120px;
            filter: drop-shadow(0px 0px 5px rgba(0, 0, 0, 0.1));
        }
    }

    @keyframes inAnimation {
        0% {
            transform: translateY(50px);
        }
        100% {
            transform: translateY(0);
        }
    }
</style>
