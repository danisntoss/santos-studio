---
import Button from './Button.astro';
---


<section id="introduction">
    <div class="image">
        <img src="/instagrampfp.png" alt="santos.studio-logo" />
    </div>
    <div class="title">
        <h1>Santos Studio.</h1>
        <p>Proyecto personal. Estudio de dise√±o y corte de vinilo.</p>
        <Button name='Tengo un proyecto en mente!' link='/contacto'/>
    </div>
    
</section>
<style>
    section {
        /* min-height: 100vh; */
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        width: 100%;
        height: 80vh;
    }
    h1 {
        font-size: 6rem;
    }
    p {
        font-size: 1.5rem;
        font-weight: 200;
        margin-bottom: 30px;
    }
    .title {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 55%;
        flex-direction: column;
        gap: 0.7rem;
    }
    .image {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 45%;
        img{
            width: 120px;
            filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.2));
        }
        
    }
    @media (max-width: 815px) {
    section {
        flex-direction: column;
        gap: 1rem; 
        text-align: center;
        align-items: center;
        justify-content: space-evenly;
        padding-left: 0%;
        padding-top: 15%
    }
    h1 {
        font-size: 5rem;
    }
    .title, .image {
        width: 100%; 
        height: auto;
    }
}
    @media (max-width: 650px) {
        section {
        justify-content: center;
    }
        h1 {
        font-size: 4rem;
        
    } }
    @media (max-width: 480px) {
        
        h1 {
            width: 90%;
            font-size: 3rem;
        }
    } 
    @media (max-width: 400px) {
        h1 {
            width: 90%;
            font-size: 2.7rem;
        }
        
    } 
</style>
