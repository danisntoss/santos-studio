---
interface Props {
    title: string;
    icon: string;
}

const { title, icon } = Astro.props;
---

<div class="feature">
    <img src={icon} alt={title} />
    <span>{title}</span>
</div>

<style>
    .feature {
        height: 32px;
        display: flex;
        align-items: center;
        gap: 0.5rem;

        img {
            --size: 24px;
            width: var(--size);
            height: var(--size);
        }

        span {
            font-size: 1rem;
            font-weight: 400;
            color: #333;
        }
    }
</style>