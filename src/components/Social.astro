---
interface Props {
    link: string;
    logo: string;
    alt: string;
}

const { link, logo, alt } = Astro.props;
---

  <a target="_blank" href={link} rel="noopener noreferrer">
    <img src={logo} alt={alt}>
  </a>

<style>
    
    a {
        padding: 10px;
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        background: none;
        border: 1px solid transparent;
        border-radius: 5px;
        font-size: 1.5rem;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

    img {
        width: 100%;
        height: 100%;
    }
    
    a:hover {
        background-color: #c1c1c117;
        filter: contrast(2);
    }
    
</style>
