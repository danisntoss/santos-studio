<style>
    header {
        width: 100%;
        height: 75px;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
    }
    nav {
        background: rgb(245, 245, 245);
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1px 20px;
        gap: 15px;
        border-bottom: 0.5px solid #0000004d;
    }
    /* img styles */
    img {
        width: 50px;
    }

    /* a styles */
    a {
        padding: 5px 15px 5px;
        color: black;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
        
    }
    a:visited {
        color: inherit;
    }
    a:hover {
            transform: translateY(-2px);
            cursor: pointer;
        }
@media (max-width: 768px) {
    nav {
        flex-direction: row;
        gap: 10px;
        padding: 10px;
    }
    a {
        padding: 5px 15px 5px;
    }
    img {
        width: 50px;
    }
}


</style>
