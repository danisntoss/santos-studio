---
interface Props {
    title: string;
    image: string;
    url: string;
    description: string;
    tags: string[];
}

const { title, image, url, tags, description } = Astro.props;
---

<a href={url} class="bento-card">
    <img src={image} alt={title} />
    <div class="text-info">
        <div class="title-container">
            <h3>{title}</h3>
        </div>
        <div class="tags">
            <span class="tag tag-primary">{tags[0]}</span>
            <span class="tag price">{tags[1]}</span>
        </div>
    </div>
</a>

<style>
    a {
        text-decoration: none;
        color: var(--text-color-light);
    }

    .bento-card {
        width: 100%;
        height: 100%;
        padding: 8px;
        display: flex;
        gap: 20px;
        flex-direction: column;
        border-radius: 10px;
        background-color: #ffffffca;
        transition: all 0.2s ease-in-out;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);


        img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }

        .text-info {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 20px;

            .tags {
                width: 100%;
                display: flex;
                gap: 12px;
                justify-content: flex-end;

                .tag {
                    padding: 4px 14px;
                    border-radius: 8px;
                    font-size: 16px;
                    font-weight: 500;

                    &.tag-primary {
                        background-color: #f5f5f5;
                        color: #424951ca;
                    }
                    
                    &.price {
                        background-color: #424951ca;
                        color: #fff;
                    }
                }
            }
            
            h3 {
                font-size: 1.5rem;
                margin-bottom: 10px;
                color: #1e1e1e;
            }
            p {
                font-size: 1rem;
            }
        }

        &:hover {
            transform: translateY(-5px);
            cursor: pointer;
        }
    }

    .swiper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000000aa;
        overflow: hidden;
        z-index: 100;

        &.hidden {
            display: none;
        }
    }

    .swiper-wrapper {
        width: 100%;
        height: 100%;
    }

    .swiper-slide {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    img {
        height: 90%;
        width: auto;
    }

    .swiper-close {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 10px;
        border: none;
        background-color: #fff;
        color: #000;
        border-radius: 5px;
        cursor: pointer;
        z-index: 1000;
    }
</style>