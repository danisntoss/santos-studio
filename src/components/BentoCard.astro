---
const { title, image, url, description } = Astro.props;
---

<a href={url} class="bento-card">
    <img src={image} alt={title} />
    <div class="text-info">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</a>

<style>
    a {
        text-decoration: none;
        color: var(--text-color-light);
    }

    .bento-card {
        width: 100%;
        height: 100%;
        display: flex;
        gap: 20px;
        flex-direction: column;
        border-radius: 10px;
        background-color: #ffffffca;
        transition: all 0.2s ease-in-out;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);


        img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        .text-info {
            padding: 20px;
            
            h3 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }
            p {
                font-size: 1rem;
            }
        }

        &:hover {
            transform: translateY(-5px);
            cursor: pointer;
        }
    }
</style>
