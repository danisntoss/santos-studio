---
import Swiper from './Swiper.astro';

interface Props {
    title: string;
    images: string[];
    url: string;
    description: string;
    tags: string[];
}

const { title, images, url, tags, description } = Astro.props;
---

<div class="bento-card">
    <div class="image-container">
        <Swiper images={images} />
    </div>
    <div class="text-info">
        <div class="title-container">
            <h3>{title}</h3>
        </div>
        <div class="tags">
            <span class="tag tag-primary">{tags[0]}</span>
            <span class="tag price">{tags[1]}</span>
        </div>
    </div>
</div>

<style>
    a {
        text-decoration: none;
        color: var(--text-color-light);
    }

    .image-container {
        width: 100%;
        height: 300px;
        border-radius: 10px;
        overflow: hidden;
    }

    .bento-card {
        width: 100%;
        height: 100%;
        padding: 8px;
        display: flex;
        gap: 20px;
        flex-direction: column;
        border-radius: 10px;
        background-color: #ffffffca;
        transition: all 0.2s ease-in-out;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);

        .text-info {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 20px;

            .tags {
                width: 100%;
                display: flex;
                gap: 12px;
                justify-content: flex-end;

                .tag {
                    padding: 4px 14px;
                    border-radius: 8px;
                    font-size: 16px;
                    font-weight: 500;

                    &.tag-primary {
                        background-color: #f5f5f5;
                        color: #424951ca;
                    }
                    
                    &.price {
                        background-color: #424951ca;
                        color: #fff;
                    }
                }
            }
            
            h3 {
                font-size: 1.5rem;
                margin-bottom: 10px;
                color: #1e1e1e;
            }
            p {
                font-size: 1rem;
            }
        }

        &:hover {
            transform: translateY(-5px);
            cursor: pointer;
        }
    }
</style>