---
interface Props {
  title: string;
}

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { CONSTANTS } from "../data/constants";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content={CONSTANTS.webdata.author} />
    <meta name="description" content={CONSTANTS.webdata.description} />
    <meta name="keywords" content={CONSTANTS.webdata.keywords} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{title || CONSTANTS.webdata.title}</title>
  </head>
  <body>
    <Header />
    <section>
      <slot name="welcomePage" />
    </section>
    <main>
      <slot name="main" />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --col1: #FFE5EC;
    --col2: #FFC2D1;
    --col3: #FFB3C6;
    --col4: #FF8FAB;
    --col5: #FB6F92;
    --text-color: #000;
    --bg-color: #fff;
    --nav-height: 70px;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-size: 18px;
    color: var(--text-color);
    scroll-behavior: smooth;
    scrollbar-width: thin;
    scrollbar-color: #666 #f7f7f7;
  }
  section{
    width: 100%;
    padding-top: var(--nav-height);
  }
  body {
    background: var(--bg-color);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  main {
    width: 100%;
    max-width: 1240px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 10px;
  }
</style>
