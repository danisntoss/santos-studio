---
interface Props {
  title: string;
}


import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/dani-nav.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <section>
      <slot name="welcomePage" />
    </section>
    <main>
      <slot name="main" />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --col1: #FFE5EC;
    --col2: #FFC2D1;
    --col3: #FFB3C6;
    --col4: #FF8FAB;
    --col5: #FB6F92;
    --text-color: #000;
    --bg-color: #fff;
    color-scheme: dark;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-size: 18px;
    color: var(--text-color);
    scroll-behavior: smooth;
    /* border: 1px solid black */
  }
  section{
    width: 100%;
  }
  body {
    background: radial-gradient(at center top, var(--col4) 0%, var(--col5) 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  main {
    width: 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  @media (max-width: 1440px) {
    main {
      width: 80%;
    }
  }
  @media (max-width: 550px) {
    main {
      width: 90%;
    }
  }
</style>
