---
import type { GetStaticPaths } from "astro";
import { data } from "../data/data";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const { id } = Astro.params;
const datos = data.flat();
const item = datos.find((item) => item.id === id);

export const getStaticPaths = async () => {
    const datos = data.flat();
    const paths = datos.map((item) => ({
        params: { id: item.id.toString() },
    }));
    return paths ;
};
---

<Layout title={item.name}>
    <div slot="main" class="container">
        <Card
            name={item.name}
            image={item.image}
            description={item.description}  
        />
        
    </div>
</Layout>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        padding: 2rem;
    }
    @media (max-width: 768px) {
    .container {
        padding: 0.5rem; /* Reduce el padding en pantallas peque√±as */
        margin: 0.5rem; /* Reduce el margen para usar mejor el espacio */
    }}
</style>
